<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sync="clr-namespace:Syncfusion.SfDataGrid.XForms;assembly=Syncfusion.SfDataGrid.XForms" 
             x:Class="SQLiteEx.ManageEmployee" Title="Manage Employees" >
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
  </ContentPage.Padding>
  <ContentPage.Content>
        <StackLayout Padding="5,5,5,5">
            <sync:SfDataGrid x:Name="dbSyncData"
            ColumnSizer="Star"
            AutoGenerateColumns="False"
            ItemsSource="{Binding OrderInfoCollection}">

                <sync:SfDataGrid.Columns x:TypeArguments="syncfusion:Columns">
                    <sync:GridTextColumn HeaderText="Name" 
                                   MappingName="EmpName" />
                    <sync:GridTextColumn HeaderText="Company"
                                   MappingName="Company" />
                    <sync:GridTextColumn MappingName="Designation" />
                    <sync:GridTextColumn HeaderText="Department"
                                   MappingName="Department" />
                </sync:SfDataGrid.Columns>
            </sync:SfDataGrid>

            <Button Text="Add New Employee" Clicked="OnNewClicked" />
        </StackLayout>
        
  </ContentPage.Content>
</ContentPage>